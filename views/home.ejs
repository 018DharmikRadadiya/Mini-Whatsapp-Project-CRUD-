<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatapp</title>
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container {
            margin-top: 30px;
            margin-bottom: 30px;
            width: 70%;
            background-color: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
        }
        .message {
            font-size: 1.3em;
            background-color: #252525;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            margin-top: 20px;
            border-left: 5px solid #25D366;
            border-right: 5px solid #25D366;
        }
        .buttons {
            margin-top: 10px;
        }
        .btn {
            background-color: #25D366;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 5px;
            font-size: 0.8em;
            font-weight: bolder;
        }
        .btn:hover {
            background-color: #1ebe5d;
        }
        .btn.delete {
            background-color: #ff3b30;
            margin-left: 10px;
        }
        .btn.delete:hover {
            background-color: #d32f2f;
        }
        .container h1{
            text-align: center;
            color: #1ebe5d;
            font-size: 2.2em;
        }
        strong{
            color: #1ebe5d;
        }
        .container a{
            font-size: 1.3em;
            text-decoration: none;
            color: white;
            background-color: #1ebe5d;
            padding: 5px 10px;
            border-radius: 5px;
            align-items: center;
            margin-bottom: 10px;
            font-weight: bolder;
            transition: 0.2s;
        }
        .container a:hover{
            background-color: #169448;
        }
        .buttons{
            display: flex;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Mini-Whatapp</h1>
        <a href="http://localhost:8080/chats/new">Create New</a>
        <% for(let data of allData) { %>
        <div class="message">
            <p><strong>From:</strong> <%= data.from %></p>
            <p><strong>To:</strong> <%= data.to %></p>
            <p><strong>Message:</strong> <%= data.msg %></p>
            <p><strong>Created At:</strong> <%= data.created_at.toString().split(" ").slice(0,5).join(" ") %></p>
            <div class="buttons">
                <form method="get" action="http://localhost:8080/chats/update/<%= data.id %>">
                    <button class="btn update">Update Message</button>
                </form>
                <form method="post" action="/chats/<%= data.id %>?_method=DELETE">
                    <button class="btn delete">Delete</button>
                </form>
                
            </div>  
        </div>
        <% } %>
    </div>
</body>
</html>